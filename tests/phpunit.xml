<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/5.2/phpunit.xsd"
        bootstrap="bootstrap.php"
        colors="true"
        verbose="true">
    <testsuites>
        <testsuite name="Unit Tests">
            <directory suffix="Tester.php">unitTests/app</directory>
        </testsuite>
        <testsuite name="E2E Tests">
            <directory suffix="Tester.php">e2e</directory>
            <exclude>e2e/GradingServer</exclude>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="report" />
    </logging>
    <php>
        <env name="TEST_URL" value="http://192.168.56.101" />
        <env name="BROWSER" value="firefox" />
    </php>
</phpunit>