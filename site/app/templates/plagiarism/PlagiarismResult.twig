<script>
    $(document).ready(function() {
        setUpPlagView("{{ gradeable_id }}");
    });
</script>
<div class="content plagiarism-result-cont">
    <div class="plag-flex">
        <span>
            Gradeable: <b>{{ gradeable_title }}</b>
        </span>
        <a class="btn btn-primary"
           title="View Key"
           onclick="showPlagiarismHighKey()"
        >
            View Key
        </a>
    </div>
    <hr />
    <form id="users_with_plagiarism" class="plag-flex">
        <span class="plag-flex-item">User 1 (sorted by %match):</span>
        <select name="user_id_1" class="plag-flex-item">
            <option value="">None</option>

            {% for ranking in rankings %}
                <option value="{{ ranking[1] }}">{{ ranking[3] }} {{ ranking[4] }} &lt;{{ ranking[1] }}&gt; ({{ ranking[1] }})</option>
            {% endfor %}

        </select>
        <span class="plag-flex-item">Version: </span>
        <select name="version_user_1" class="plag-flex-item">
            <option value="">None</option>
        </select>
        <span class="plag-flex-item">User 2:</span>
        <select name="user_id_2" class="plag-flex-item">
            <option value="">None</option>
        </select>
        <a name="toggle" class="btn btn-primary plag-flex-item" onclick="toggle();">Toggle</a>
    </form>
    <div style="position:relative; height:80vh; overflow-y:hidden;" class="row">
        <div style="max-height: 100%; width:100%;" class="sub">
            <div style="float:left;width:48%;height:100%;line-height:1.5em;overflow:auto;padding:5px;border: solid 1px #555;background:white;border-width: 2px;">
                <textarea id="code_box_1" name="code_box_1"></textarea>
            </div>
            <div style="float:right;width:48%;height:100%;line-height:1.5em;overflow:auto;padding:5px;border: solid 1px #555;background:white;border-width: 2px;">
                <textarea id="code_box_2" name="code_box_2"></textarea>
            </div>
        </div>
    </div>
</div>

{% include("admin/PlagiarismHighlightingKey.twig") %}
