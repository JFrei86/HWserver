<div><h3>Request Regrade
{% if btn_type == "request" %}
    </h3></div>
    <div><p class="red-message">Warning: Frivoulous requests may result in a grade deduction, loss of late days, or having to retake data structures!</p></div>
    {% set message = "Request Regrade" %}
{% elseif btn_type == "admin" %}
    <script type="text/javascript">
    toggleRegradeRequests();
    document.getElementById("ShowRegradeRequestButton").style.display = 'none'
    </script>
    {% if resolved == true %}
        <span><span class="fa fa-check" style="font-size: 16px;"></span>  
        <span class="green-message">Regrade Request Has Been Reviewed</span></span>
    {% else %}
        <span><span class="fa fa-hourglass" style="font-size: 16px;"></span> 
        <span class="red-message">Regrade Request Awaiting Review</span></span> 
    {% endif %}
    </h3></div>
    {% set message = "Type response here" %}
    {% set button_message = "Respond and Resolve request" %}
{% elseif btn_type == "pending" %}
    <script type="text/javascript">
    toggleRegradeRequests();
    document.getElementById("ShowRegradeRequestButton").style.display = 'none'
    </script>
    <span><span class="fa fa-hourglass" style="font-size: 16px;"></span> 
    <span class="red-message">Regrade Request Being Reviewed</span></span> 
    </h3></div>
    <div><p class="red-message">Warning: Frivoulous requests may result in a grade deduction, loss of late days, or having to retake data structures!</p></div> 
    {% set message = "Additional Details" %}
    {% set button_message = "Submit Additional Information" %}
{% elseif btn_type == "completed" %}
    <script type="text/javascript">
    toggleRegradeRequests();
    document.getElementById("ShowRegradeRequestButton").style.display = 'none'
    </script>
    <span><span class="fa fa-check" style="font-size: 16px;"></span>  
    <span class="green-message">Regrade Request Has Been Reviewed</span></span>
    </h3></div>
    {% set message = "Request Reviewed" %}
{% endif %}
{% for post in posts %}
    <div style="margin-top: 20px;">
        <div class='{{ post.is_staff ? "post_box important" : "post_box" }} {{ loop.index0 == 0 ? "first_post" : "" }}' style="padding:20px;">
            <p>{{ post.content }}</p>
            <hr>
            <div style="float:right">
                <b>{{ post.name }}</b> &nbsp;
                {{ post.date }}
            </div>
        </div>
    </div>
{% endfor %}
{% if action == 'make_request_post' %}
<div style="padding:20px;">
    <form method="POST" id="replyTextForm" action="{{ core.buildUrl({'component': 'student',
            'action': 'make_request_post',
            'regrade_id': thread_id,
            'gradeable_id': gradeable.getId(),
            'user_id': core.getUser().getId()
        }) }}">
        <textarea name="replyTextArea" id="replyTextArea" style="resize:none;min-height:100px;width:100%; font-family: inherit;" rows="10" cols="30" placeholder="{{ message }}" id="makeRequestPost" required></textarea>
        <input type="submit" value="{{ button_message }}" class="btn btn-primary" style="margin-top: 15px; float: right">
        <button type="button" title="Insert a link" onclick="addBBCode(1, '#replyTextArea')" style="margin-right:10px;" class="btn btn-default">Link <i class="fa fa-link fa-1x"></i></button><button title="Insert a code segment" type="button" onclick="addBBCode(0, '#replyTextArea')" class="btn btn-default">Code <i class="fa fa-code fa-1x"></i></button>
        <input type="button" class="btn btn-default" id="cancelRegrade" value="Cancel Regrade Request" style="margin-top: 15px; float: right" onclick="cancelRegradeRequest({{ thread_id }});">
    </form>
</div>
{% elseif action == 'make_request_post_admin' %}
<div style="padding:20px;">
    <form method="POST" id="replyTextForm" action="{{ core.buildUrl({'component': 'student',
            'action': 'make_request_post',
            'regrade_id': thread_id,
            'gradeable_id': gradeable.getId(),
            'user_id': core.getUser().getId()
        }) }}">
        <textarea name="replyTextArea" id="replyTextArea" style="resize:none;min-height:100px;width:100%; font-family: inherit;" rows="10" cols="30" placeholder="{{ message }}" id="makeRequestPost" required></textarea>
        <input type="submit" value="{{ button_message }}" class="btn btn-primary" style="margin-top: 15px; float: right" onclick="changeRegradeStatus({{ thread_id }}, 1);">
        <button type="button" title="Insert a link" onclick="addBBCode(1, '#replyTextArea')" style="margin-right:10px;" class="btn btn-default">Link <i class="fa fa-link fa-1x"></i></button><button title="Insert a code segment" type="button" onclick="addBBCode(0, '#replyTextArea')" class="btn btn-default">Code <i class="fa fa-code fa-1x"></i></button>
        <input type="button" class="btn btn-default" id="cancelRegrade" value="Resolve Regrade Request Without Response" style="margin-top: 15px; float: right" onclick="changeRegradeStatus({{ thread_id }}, 1);">
        <input type="button" class="btn btn-default" id="extraInfoRegrade" value="Request Additional Information" style="margin-top: 15px; float: right" onclick="changeRegradeStatus({{ thread_id }}, -1);">
    </form>
</div>
{% else %}
<div style="padding:20px;">
    <form method="POST" id="replyTextForm" action="{{ url }}">
        <textarea name="replyTextArea" id="replyTextArea" style="resize:none;min-height:100px;width:100%; font-family: inherit;" rows="10" cols="30" placeholder="{{ message }}" id="makeRequestPost" required></textarea>
        <input type="submit" value="Submit Regrade Request" class="btn btn-primary" style="margin-top: 15px; float: right">
        <button type="button" title="Insert a link" onclick="addBBCode(1, '#replyTextArea')" style="margin-right:10px;" class="btn btn-default">Link <i class="fa fa-link fa-1x"></i></button><button title="Insert a code segment" type="button" onclick="addBBCode(0, '#replyTextArea')" class="btn btn-default">Code <i class="fa fa-code fa-1x"></i></button>
    </form>
</div>
{% endif %}
<script type="text/javascript">
    $("#replyTextForm").submit(function(event) {
        $.ajax({
            type: "POST",
            url: $(this).attr("action"),
            data: $(this).serialize(),
            success: function(data){
                window.location.reload();
            }
        });
        event.preventDefault();
    });
</script>
