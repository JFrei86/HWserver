<h3>Request Regrade</h3>
{% if btn_type == "request" %}
    {% set message = "Request Regrade" %}
    {% set is_disabled = false %}
    {% set class = "btn-default" %}
    {% set submit = false %}
{% elseif btn_type == "delete" %}
    {% set message = "Delete Request" %}
    {% set is_disabled = false %}
    {% set class = "btn-danger" %}
    {% set submit = true %}
{% elseif btn_type == "pending" %}
    {% set message = "Additional Details" %}
    {% set is_disabled = true %}
    {% set class = "btn-default" %}
    {% set submit = false %}
{% elseif btn_type == "completed" %}
    {% set message = "Request Reviewed" %}
    {% set is_disabled = true %}
    {% set class = "btn-default" %}
    {% set submit = false %}
{% endif %}
{% for post in posts %}
    <div style="margin-top: 20px;">
        <div class='{{ is_staff ? "post_box important" : "post_box" }} {{ loop.index0 == 0 ? "first_post" : "" }}' style="padding:20px;">
            <p>{{ post.content }}</p>
            <hr>
            <div style="float:right">
                <b>{{ post.name }}</b> &nbsp;
                {{ post.date }}
            </div>
        </div>
    </div>
{% endfor %}
{% if action == 'make_regrade_post' %}
<div style="padding:20px;">
    <form method="POST" id="replyTextForm" action="{{ core.buildUrl({'component': 'student',
            'action': 'make_request_post',
            'regrade_id': thread_id,
            'gradeable_id': gradeable.getId(),
            'user_id': core.getUser().getId()
        }) }}">
        <textarea name="replyTextArea" id="replyTextArea" style="resize:none;min-height:100px;width:100%; font-family: inherit;" rows="10" cols="30" placeholder="{{ message }}" id="makeRequestPost" required></textarea>
        <input type="submit" value="{{ message }}" class="btn btn-default" style="margin-top: 15px; float: right">
        <button type="button" title="Insert a link" onclick="addBBCode(1, '#replyTextArea')" style="margin-right:10px;" class="btn btn-default">Link <i class="fa fa-link fa-1x"></i></button><button title="Insert a code segment" type="button" onclick="addBBCode(0, '#replyTextArea')" class="btn btn-default">Code <i class="fa fa-code fa-1x"></i></button>
    </form>
</div>
{% else %}
<div style="padding:20px;">
    <form method="POST" id="replyTextForm" action="{{ url }}">
        <textarea name="replyTextArea" id="replyTextArea" style="resize:none;min-height:100px;width:100%; font-family: inherit;" rows="10" cols="30" placeholder="{{ message }}" id="makeRequestPost" required></textarea>
        <input type="submit" value="{{ message }}" class="btn btn-default" style="margin-top: 15px; float: right">
        <button type="button" title="Insert a link" onclick="addBBCode(1, '#replyTextArea')" style="margin-right:10px;" class="btn btn-default">Link <i class="fa fa-link fa-1x"></i></button><button title="Insert a code segment" type="button" onclick="addBBCode(0, '#replyTextArea')" class="btn btn-default">Code <i class="fa fa-code fa-1x"></i></button>
    </form>
</div>
{% endif %}
<script type="text/javascript">
    $("#replyTextForm").submit(function(event) {
        $.ajax({
            type: "POST",
            url: $(this).attr("action"),
            data: $(this).serialize(),
            success: function(data){
                window.location.reload();
            }
        });
        event.preventDefault();
    });
</script>
