<div class="component-tabs" data-g_id="{{ g_id }}" >
    {% for component in gradeable_components %}
        <button class="component-tab component-{{ component.id }} btn" id="{{ component_pending_inquiry }}" data-component_id="{{ component.id }}" data-color="#000000" onclick="onComponentTabClicked(this)">
            {{ component.title }}
            {% if grade_inquiries[component.id].status == -1%}
                <i class="fas fa-exclamation component-tab-icon"></i>
            {% elseif grade_inquiries[component.id] is defined and grade_inquiries[component.id].status == 0 and component.id != 0 %}
                <i class="fas fa-check component-tab-icon"></i>
            {% endif %}
        </button>
    {% endfor %}
</div>
