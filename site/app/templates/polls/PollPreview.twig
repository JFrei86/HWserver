{% extends 'generic/Popup.twig' %}
{% block popup_id %}poll-preview{% endblock %}
{% block title %}Student view of the poll:{% endblock %}
{% block body %}
<div>
    <div class="content">
        <h1 id="poll-preview-name">Poll Name</h1>
        <div>
            <p id="poll-preview-question"></p>
            </br>
        </div>
        <div id="poll-preview-image-wrapper">
            {% if file_data is not null %}
                <img id="poll-preview-image" src="{{ file_data }}" alt="Uploaded image preview">
            {% else %}
                {# scr has to be set to something if file_data is null (when there is no saved file path), for accessiblity #}
                <img id="poll-preview-image" src="placeholder/link" alt="Uploaded image preview">
            {% endif %}
        </div>
        <form>
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}"/>
            <input type="hidden" name="poll_id" value="{{ poll.getId() }}"/>
            <fieldset id="poll-preview-answers">
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}
{% block buttons %}
    {{ block('close_button') }}
{% endblock %}
