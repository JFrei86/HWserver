{# Get badge css class based on points earned vs max possible #}
{% macro get_badge_style(earned, max) %}
    {% if earned < 0 %}
        {% if earned < 0.5 * max %}
            red-background
        {% else %}
            yellow-background
        {% endif %}
    {% else %}
        {% if earned >= max %}
            green-background
        {% elseif earned > max * 0.5 %}
            yellow-background
        {% else %}
            red-background
        {% endif %}
    {% endif %}
{% endmacro %}
