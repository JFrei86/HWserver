<div id="message" type="hidden"></div>
<div class="content">
    <h1>Excused Absence Extensions</h1>
    <form action="" enctype="multipart/form-data" id="excusedAbsenceForm" method="post" onsubmit="return updateHomeworkExtensions($(this));">
        <input type="hidden" name="csrf_token" value="{{ core.getCsrfToken() }}"/>
        <input name="option" type="hidden" value="-1"/>
        <div class="option">
            <p>
                Use this form to grant an extension (e.g., for an excused absence) to a user on a specific assignment.<br><br><br></p>
            <div class="option">
                <label for="g_id">Select Gradeable:</label><br>
                <select id="g_id" name="g_id" onchange="loadHomeworkExtensions($(this).val(),$(this).find('option:selected').attr('data-due-date'));clearDate();" style="margin-top: 10px; width: 50%">
                    <option disabled selected value>
                        -- select an option --
                    </option>
                    {% for index, value in gradeables %}
                        <option value="{{value['g_id']}}" data-due-date="{{value['eg_submission_due_date']|date("m/d/Y H:i:s")}}">{{ value['g_title'] }}</option>
                    {% endfor %}
                </select>
                <p>Due Date:
                    <span id="due_date"></span>
                </p>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ core.getCsrfToken() }}"/>
        <div class="option-title">Single Student Entry<br></div>
        <div class="option" style="width:25%; display:inline-block;">
            <label for="user_id">Student ID:</label><br>
            <input class="option-input" id="user_id" name="user_id" style="float:left" type="text">
        </div>
        <div class="option" style="width:25%; display:inline-block;">
            <label for="late_days">Give the Days of Extension:</label><br>
            <input class="option-input" id="late_days" name="late_days" onkeyup="clearDate()" style="float:left" type="text">
        </div>
        <div class="option" style="width:25%; display:inline-block;">
            <label for="late_calendar">Or Pick a New Due Date:</label><br>
            <input class="option-input" id="late_calendar" name="late_calendar" style="float:left" type="text">
        </div>
        <div class="option" style="width:10%; display:inline-block; vertical-align: bottom;"><input class="btn btn-primary" style="float:left" type="submit" value="Submit"></div>
        <div class="option-title" id="csv_upload_title">Multiple Student Entry Via CSV Upload</div>
        <div id="csv_upload_format">Do not use column headers. CSV must be of the following form: student_id, gradeable_id, days_of_extension</div>
        <div style="padding-bottom:20px;"><input aria-labelledby="csv_upload_title csv_upload_format" id="csv_upload" name="csv_upload" onchange="return updateHomeworkExtensions($(this));" type="file"></div>
    </form>
    <div
        align="center" id="load-homework-extensions">
        {# This is a data table #}
        <table align="center" class="table table-striped table-bordered persist-area" id="my_table" style="width:70%">
            <div class="option-title" id="title"></div>
            <div>
                <caption/>
                <thead class="persist-thead">
                    <th>Student ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Number of Days of Extension</th>
                </thead>
            </div>
        </table>
    </div>
</div>
<script>
    $("#user_id").autocomplete({source: {{ student_full|raw }}});
    function clearDate() {
        document.getElementById("late_calendar").value = "";
    }
    $(document).ready(function () {
        flatpickr(document.getElementById("late_calendar"), {
            plugins: [ShortcutButtonsPlugin(
                    {
                        button: [
                            {
                                label: "Now"
                            }, 
                            {
                                label: "End of time"
                            }
                        ],
                        label: "or",
                        onClick: (index, fp) => {
                            let date;
                            switch (index) {
                                case 0: date = new Date();
                                    break;
                                case 1: date = new Date("9999-01-01 00:00:00");
                                    break;
                            }
                            fp.setDate(date);
                        }
                    }
                )],
            allowInput: true,
            enableTime: false,
            enableSeconds: false,
            time_24hr: true,
            dateFormat: "Y-m-d",
            onChange: function (selectedDates, dateStr, instance) {
                var due_date_value = document.getElementById("due_date").innerHTML.substr(0, 10);
                var new_due_date = new Date(selectedDates[0]);
                var old_due_date = new Date(due_date_value);
                var delta = (new_due_date - old_due_date) / (1000 * 60 * 60 * 24);
                if (delta < 0) {
                    delta = 0;
                }
                var diff = Math.floor(delta);
                document.getElementById("late_days").value = diff;
            }
        });
    });
</script>
{% include('admin/users/MoreExtensions.twig') %}
