{% macro query_list(queries) %}
    <table>
        <tr>
            <th style="width: 2em"></th>
            <th></th>
        </tr>
        {% for query in queries %}
            <tr>
                <td style="text-align: right;">
                    {{ loop.index }}&nbsp;&nbsp;
                </td>
                <td>
                    <pre>{{ query }}</pre>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endmacro %}