{% extends 'generic/Popup.twig' %}
{% block popup_id %}close-submission-form{% endblock %}
{% block title %}Close Submission Confirmation{% endblock %}
{% block body %}
    <p>Note: Closing this gradeable will cause all future submissions to be marked as late.
    </p>
    <br />
    <input type="hidden" name="csrf_token" value="{{ core.getCsrfToken() }}" />
    Are you sure you want to close student submissions for gradeable:
    <div name="delete-gradeable-message">
    </div>
{% endblock %}
{% block form %}
    <form name="close-submission-confirmation" method="post" action="">
        {{ parent() }}
    </form>
{% endblock %}
{% block buttons %}
    {{ block('close_button') }}
    <input class="btn btn-primary" type="submit" value="Close Submission">
{% endblock %}