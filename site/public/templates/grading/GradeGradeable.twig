{% extends "Gradeable.twig" %}

{% block generate_component %}
    {% set graded_component = graded_components[component.id] %}
    {% include "GradeComponent.twig" %}
{% endblock %}

{% block footer_content %}
{# General Comment #}
    <div id="overall-comment-container">
        {% include "OverallComment.twig" with {
                'disabled': grading_disabled,
                'editable': false,
                'overall_comment': overall_comment
        } only %}
    </div>
{# /General Comment #}

{# Total Box #}
    <div id="total-score-container">
        {% include "TotalScoreBox.twig" with {
            'auto_grading_earned': auto_grading_earned,
            'auto_grading_total': auto_grading_total,
            'ta_grading_earned': ta_grading_earned,
            'ta_grading_total': ta_grading_total
        } only %}
    </div>
{# /Total Box #}
{% endblock %}