{% extends "Component.twig" %}

{% block left_block %}
{% endblock %}

{% block title_block %}
    {% if show_mark_list %}
        <input class="component-title" type="text" value="{{ component.title }}" />
        <i>Page #:</i>
        <input class="page-number" type="number" step="1" min="1" value="{{ component.page }}" {{ component.page < 1 ? 'hidden' : '' }}/>
    {% else %}
        <b>{{ component.title }}</b>

        {% if component.page != 0 %}
            <i>Page #: {{ component.page }}</i>
        {% endif %}
    {% endif %}
{% endblock %}

{% block ta_comment_block %}
    <textarea id="ta-comment-{{ component.id }}" placeholder="Note to TAs">{{ component.ta_comment }}</textarea>
{% endblock %}

{% block student_comment_block %}
    <textarea id="student-comment-{{ component.id }}" placeholder="Note to Student">{{ component.student_comment }}</textarea>
{% endblock %}
