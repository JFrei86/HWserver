<div class="container mark-conflict-container">
    {% for conflict in conflict_marks %}
        <div class="row mark-conflict-row"
             data-mark_id="{{ conflict.domMark.id }}">
            <div class="col-no-gutters">
                Mark id: {{ conflict.domMark.id }}
            </div>
            <div class="col container">
                <div class="row mark-resolve mark-resolve-dom">
                    {% if not conflict.local_deleted %}
                        <span class="col-no-gutters points"
                              data-points="{{ conflict.domMark.points }}">
                            ({{ conflict.domMark.points }})
                        </span>
                        <span class="col-sm title"
                              data-title="{{ conflict.domMark.title }}">
                            {{ conflict.domMark.title }}
                        </span>
                        <span class="col-no-gutters button-container">
                            <input type="button" class="btn btn-primary" value="Use My Edits" onclick="onResolutionClick(this)"/>
                        </span>
                    {% else %}
                        <span class="col title points mark-deleted-message">
                            You Deleted the Mark
                        </span>
                        <span class="col-no-gutters button-container">
                            <input type="button" class="btn btn-primary" value="Delete Mark" onclick="onResolutionClick(this)"/>
                        </span>
                    {% endif %}
                </div>
                <div class="row mark-resolve mark-resolve-old-server">
                    <span class="col-no-gutters points"
                          data-points="{{ conflict.oldServerMark.points }}">
                        ({{ conflict.oldServerMark.points }})
                    </span>
                    <span class="col-sm title"
                          data-title="{{ conflict.oldServerMark.title }}">
                        {{ conflict.oldServerMark.title }}
                    </span>
                    <span class="col-no-gutters button-container">
                        <input type="button" class="btn btn-default" value="Revert to Original" onclick="onResolutionClick(this)"/>
                    </span>
                </div>
                <div class="row mark-resolve mark-resolve-server">
                    {% if conflict.serverMark != null %}
                        <span class="col-no-gutters points"
                              data-points="{{ conflict.serverMark.points }}">
                            ({{ conflict.serverMark.points }})
                        </span>
                        <span class="col-sm title"
                              data-title="{{ conflict.serverMark.title }}">
                            {{ conflict.serverMark.title }}
                        </span>
                        <span class="col-no-gutters button-container">
                            <input type="button" class="btn btn-primary" value="Ignore My Edits" onclick="onResolutionClick(this)"/>
                        </span>
                    {% else %}
                        <span class="col title points mark-deleted-message">
                            Mark Deleted From Server
                        </span>
                        <span class="col-no-gutters button-container">
                            <input type="button" class="btn btn-primary" value="Delete Mark" onclick="onResolutionClick(this)"/>
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>