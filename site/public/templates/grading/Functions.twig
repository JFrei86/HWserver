{#
Function for getting the badge style for a given set of total and earned points
#}
{% macro getBadgeStyle(earned, total) %}
    {% if earned is not defined or total is not defined %}
        gray-background
    {% else %}
        {% set percent = earned / total %}
        {% if percent < 0.5 %}
            red-background
        {% else if percent < 0.8 %}
            yellow-background
        {% else %}
            green-background
        {% endif %}
    {% endif %}
{% endmacro %}