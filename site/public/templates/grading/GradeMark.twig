{% block row_extra_properties %}
    class="{{ mark.publish ? "is_publish" : "" }}"
    onclick="selectMark('{{ component_id }}', '{{ mark.id }}'); event.stopPropagation();"
{% endblock %}

{% block checkbox_classes %}
    {{ mark_selected ? "mark-has" : "" }}
{% endblock %}

{% block points_extra_properties %}
